<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
    <%- include('./partials/header') %>
    <%- include('./partials/button') %>
    <%- include('./partials/toggle') %>
    <div class="nuevo-banner"></div>
    <main>
        <div class="barra-navegacion">
            <ol class="lista-producto">
                <li class="barra-van">
                    <a class="item-class">Resultados de la búsqueda: <%=search%></a>
                </li>
            </ol>
        </div>
        <section class="section">
            <div class="aside"></div>
            <div class="articles">
                <% if (birraSearch.length > 0) {
                    birraSearch.forEach(beer => {  %>
                <article class="article">
                    <div class="product-img">
                        <a href="/products/detail/<%=beer.idCerveza%>"><img src="/img/products/<%=beer.image%>" alt="foto birra" ></a>
                    </div>
                    <div class="description">
                        <p class="discount"></p>
                        <p class="price">$ <%= beer.price %></p>
                        <p class="class"><%= beer.Nombre %>  <%= beer.id_Size %></p>   
                        <p class="info"><%= beer.id_Category %> / <%= beer.abv %>% ALC</p>
                    </div>
                </article>
                <% })} else { %>
                    <div class="barra-navegacion">
                        <h2 class="title-result">No hay productos que coincidan con esa búsqueda</h2>
                    </div>
                    <% } %>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %>
    <!-- MARCOS BARRA SCROLL 220522 -->
    <%- include('./partials/scrollbar') %>
</body>
</html>