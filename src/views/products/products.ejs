<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Listado de productos'}) %>
<body>
    <%- include('../partials/header') %>
    <div class="banner">
        <img src="../img/banner.png" alt="Banner">
        <div class="capa"></div>
        <div class="info"></div>
    </div>
    <main>
        <div class="barra-navegacion">
            <ol class="lista-producto">
                <li class="barra-van">
                    <a class="item-class">Cervezas</a>
                </li>
            </ol>
        </div>
        <section class="section">
            <div class="aside"></div>
            <div class="articles">
                <% products.forEach(beer => { %>
                <article class="article">
                    <div class="product-img">
                        <a href="/products/detail/<%=beer.id%>"><img src="/img/<%=beer.image%>" alt="foto birra" ></a>
                    </div>
                    <div class="description">
                        <p class="discount"></p>
                        <p class="price">$ <%= beer.price %></p>
                        <p class="class"><%= beer.name %>  <%= beer.size %></p>   
                        <p class="info"><%= beer.category %> / <%= beer.color %> / <%= beer.abv %></p>
                    </div>
                </article>
                <%   }) %>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>