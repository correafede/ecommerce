    <!-- INICIO CONTROL DE EDAD -->
    <script>
        window.addEventListener("load", function(){
            const botonMenor = document.getElementById("boton-menor");
            const botonMayor = document.getElementById("boton-mayor");
            const containerEdad = document.getElementById("container-edad");
            const emergente = document.getElementById("emergente");
            const body = document.getElementById("body")
            
            containerEdad.style.display="block";
            emergente.style.display="block"


            if (sessionStorage.getItem("displaySession") == null){
                containerEdad.style.display="block";
                emergente.style.display="block"
            }else{
                containerEdad.style.display="none";
                emergente.style.display="none"
                body.style.overflow = "visible"
            }

        botonMenor.addEventListener("click", function(){
            location.href="https://www.cartoonnetwork.com.ar/juegos";
        });

        botonMayor.addEventListener("click", function(){
                emergente.style.display="none";
                containerEdad.style.display="none";
                body.style.overflow = "visible"
                sessionStorage.setItem("displaySession", containerEdad.style.display);
            })
            
        })
        </script>
